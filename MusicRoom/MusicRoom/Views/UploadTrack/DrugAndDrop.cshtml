@{
    ViewBag.Title = "DrugAndDrop";
}

<style type="text/css">
    #dropZone {
        background: gray;
        border: black dashed 3px;
        width: 170px;
        padding: 50px;
        text-align: center;
        color: white;
    }
</style>

<script type="text/javascript">
    $(function () {
        $('#dropZone').filedrop({

            url: '@Url.Action("UploadWithDragAndDrop")',
            paramname: 'files',
            maxFiles: 5,
            dragOver: function () {
                $('#dropZone').css('background', 'blue');
            },
            dragLeave: function () {
                $('#dropZone').css('background', 'gray');
            },
            drop: function () {
                $('#dropZone').css('background', 'gray');
            },
            afterAll: function () {
                $('#dropZone').html('The file(s) have been uploaded successfully!');
            },
            uploadFinished: function (i, file, response, time) {
                $('#uploadResult').append('<li>' + file.name + '</li>');
                window.location.replace('@Url.Action("Upload")');
            },
        });
    });
</script>

<div id="dropZone">Drop your files here for upload</div>
<br />
